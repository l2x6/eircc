<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
    <extension point="org.eclipse.ui.views">
        <view id="org.l2x6.eircc.ui.views.IrcAccountsView" name="%IrcAccountsView.name" class="org.l2x6.eircc.ui.views.IrcAccountsView"
            icon="icons/account.gif" />
    </extension>

    <extension point="org.eclipse.ui.newWizards">
        <wizard id="org.l2x6.eircc.ui.NewIrcAccountWizard" name="%NewIrcAccountWizard.name"
            class="org.l2x6.eircc.ui.NewIrcAccountWizard"
            category="org.l2x6.eircc.ui.newWizardCategory"
            icon="icons/account-new.png">

            <description>%NewIrcAccountWizard.desc</description>
        </wizard>
        <category id="org.l2x6.eircc.ui.newWizardCategory"
            name="%NewIrcAccountWizard.name">
        </category>
    </extension>
    <extension
        point="org.eclipse.ui.perspectives">
        <perspective
            id="org.l2x6.eircc.ui.IrcPerspective"
            name="%IrcPerspective.name"
            class="org.l2x6.eircc.ui.IrcPerspective"
            icon="icons/eircc.png">
        </perspective>
    </extension>
    <extension
        point = "org.eclipse.ui.editors">
        <editor
           id = "org.l2x6.eircc.ui.editor.IrcChannelEditor"
           name="%IrcChannelEditor_name"
           icon="icons/channel.gif"
           class="org.l2x6.eircc.ui.editor.IrcChannelEditor"
           extensions="irc.log" >
        </editor>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution locationURI="toolbar:org.l2x6.eircc.ui.views.IrcAccountsView">
           <command commandId="org.eclipse.ui.navigate.expandAll"></command>
           <command commandId="org.eclipse.ui.navigate.collapseAll"></command>
        </menuContribution>
        <menuContribution
              allPopups="false"
              locationURI="toolbar:org.eclipse.ui.main.toolbar">
           <toolbar
                 id="org.l2x6.eircc.ui.IrcToolbar"
                 label="%IrcToolbar.label">
              <command
                    commandId="org.l2x6.eircc.ui.commands.IrcConnectCommand"
                    icon="icons/connect.gif"
                    label="%IrcConnectCommand.name"
                    style="push">
              </command>
           </toolbar>
        </menuContribution>
    </extension>
    <extension
        point = "org.eclipse.ui.elementFactories">
        <factory
           id="org.l2x6.eircc.ui.editor.IrcChannelElementFactory"
           class="org.l2x6.eircc.ui.editor.IrcChannelElementFactory">
        </factory>
    </extension>
    <extension
          point="org.eclipse.ui.commands">
          <command
                categoryId="org.l2x6.eircc.ui.IrcCommands"
                description="%IrcConnectCommand.desc"
                id="org.l2x6.eircc.ui.commands.IrcConnectCommand"
                name="%IrcConnectCommand.name">
          </command>
          <category
            name="%IrcCommandCategory.name"
            description="%IrcCommandCategory.desc"
            id="org.l2x6.eircc.ui.IrcCommands">
          </category>
    </extension>
    <extension
          point="org.eclipse.ui.handlers">
        <handler
             class="org.l2x6.eircc.ui.commands.IrcConnectHandler"
             commandId="org.l2x6.eircc.ui.commands.IrcConnectCommand">
                <enabledWhen>
                    <with variable="selection">
                        <iterate ifEmpty="false" operator="or">
                            <instanceof value="org.l2x6.eircc.core.model.IrcChannel"/>
                        </iterate>
                    </with>
                </enabledWhen>
        </handler>
    </extension>
</plugin>
